    <description><p>This is the overall data model for the project TibSchol - The Dawn of Tibetan Buddhist Scholasticism (11th-13th c.). This project has received funding from the European Research Council (ERC) under the European Union's Horizon 2020 research and innovation programme (grant agreement No 101001002).</p></description>
    <classes>
        
        <class ID="Manuscript">
            <name>Manuscript</name>
            <definition>
                <p>A version of a given <className>Work</className> instantiated in writing in a physical object (manuscript, blockprint, book, etc.), which may or not be extant.</p>
            </definition>
            
            
            <properties>
                <property ID="instance.identifier">
                    <arity>1</arity>
                    <name>Identifier(s)</name>
                    <datatypeName target="shortText"/>
                    <note>the identifier(s) of the instance, e.g., signature on the manuscript, catalogue number, TibSchol number</note>
                </property>
                <property ID="instance.source">
                    <arity>1</arity>
                    <name>Source</name>
                    <datatypeName target="shortText"/>
                    <note>bibliographical reference for the instance itself or a physical or digital copy of the physical object</note>
                </property>
            </properties>

            <relations>
                <relation ID="InstancecopyInstance">
                    <sourceClass target="Manuscript">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Manuscript">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>copied from</name>
                    <reverseName>is source for</reverseName>
                </relation>
                <relation ID="InstancetoPerson">
                    <sourceClass target="Manuscript">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Person">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>owned by/copied by</name>
                    <reverseName>is owner of/is scribe of</reverseName>
                </relation>
                <relation ID="manuscripttransmitsWork">
                    <sourceClass target="Manuscript">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Work">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>transmits</name>
                    <reverseName>is transmitted in</reverseName>
                    <properties>
                        <property ID="manuscripttransmitsWork.locus">
                            <arity>1</arity>
                            <name>locus</name>
                            <datatypeName target="shortText"/>
                        </property>
                    </properties>
                </relation>
                
                <relation ID="manuscriptHasFulltextRepresentation">
                    <sourceClass target="Manuscript">
                        <arity>1</arity>
                    </sourceClass>
                    <targetClass target="TEIdocument">
                        <arity>1</arity>
                    </targetClass>
                    <name>has fulltext representation</name>
                    <reverseName>is fulltext representation of</reverseName>
                </relation>
            </relations>
            
            <mapping targetLanguage="bibframe">
                <className uri="https://id.loc.gov/ontologies/bibframe/Item.rdf">bibframe:Item</className>
                <note>Cf. Bibframe definition: "Single example of an Instance" – Instance </note>
            </mapping>
            
        </class>
        
        <class ID="Work">
            <name>Work</name>
            <definition>
                <p>The abstract notion of an intellectual creation by one or several <className target="Person">persons</className>, irrespective of its exact transmitted version, language, form etc.</p>
            </definition>
            
            <properties>
                <property ID="work.name">
                    <arity>1</arity>
                    <name>Name(s)</name>
                    <datatypeName target="shortText"/>
                    <note>the title of the work, other alternative titles</note>
                </property>
                <property ID="work.subject">
                    <arity>1</arity>
                    <name>Subject</name>
                    <datatypeName target="shortText"/>
                    <note>the general subject of the work</note>
                </property>
                <property ID="work.date">
                    <arity>1</arity>
                    <name>Date</name>
                    <datatypeName target="shortText"/>
                    <note>the date the work was composed, when known. By default, between the date of the author's birth +10 and the year of the author's date.</note>
                </property>
            </properties>     
             
            <relations>
                <relation ID="WorkCommentaryWork">
                    <sourceClass target="Work">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Work">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>commentary on</name>
                    <reverseName>has as commentary</reverseName>

                <relation ID="WorkQuotesWork" type="abstract">
                    <sourceClass target="Work">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Work">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>quotes</name>
                    <reverseName>is quoted by</reverseName>
                    <note>This is a generalization of any "WorkQuotesWork" relation. Such a relation can either be added by hand in APIS or </note>
                    <properties>
                        <property ID="WorkQuotesWork.curationMode">
                            <arity>0-1</arity>
                            <name>Curation Mode</name>
                            <datatypeName target="vocabTerm" vocabRef="vocab.curationModes"/>
                            <note>differentiate between relations added by hand in APIS or imported from a TEI source</note>
                        </property>
                        
                        <property ID="WorkQuotesWork.provenance">
                            <arity>0-1</arity>
                            <name>Provenience</name>
                            <datatypeName target="shortText"/>
                            <note>The identifier of the excerpt where this relation was extracted from.</note>
                        </property>
                    </properties>
                </relation>
                
                <relation ID="WorkQuotesDirectlyWork" parent="WorkQuotesWork">
                    <sourceClass target="Work">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Work">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>quotes directly</name>
                    <reverseName>is quoted directly by</reverseName>
                    <definition>This relation means that Work A explicitly quotes Work B, providing some kind of reference to in the text (the quoted work's title or a paraphrase of it).</definition>
                    <CHECKME status="new" when="2022-05-09" who="PH">check definition</CHECKME>
                </relation>
                <relation ID="WorkQuotesIndirectlyWork" parent="WorkQuotesWork">
                    <sourceClass target="Work">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Work">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>quotes indirectly</name>
                    <reverseName>is quoted indirectly by</reverseName>
                    <definition>This relation means that Work A implicitly quotes Work B witout making the exact source explicit,</definition>
                    <CHECKME status="new" when="2022-05-09" who="PH">check definition</CHECKME>
                </relation>
                
                <relation ID="workHasSubject">
                    <sourceClass target="Work">
                        <arity>1-n</arity>
                    </sourceClass>
                    <targetClass target="Person Work Place">
                        <arity>1-n</arity>
                    </targetClass>
                    <name>has subject</name>
                    <reverseName>is subject of</reverseName>
                    <CHECKME who="DS" when="2022-05-05" status="new">How do we deal with Topics? Should we make this a property backed by a controlled vocabulary or an entity?</CHECKME>
                </relation>
            </relations>
        </class>
        
        <class ID="Person">
